<component type="desktop">
  <name>Threadbare</name>
  <summary>Rebuild an unraveling world</summary>
  <branding>
    <color type="primary" scheme_preference="light">#53abad</color>
    <color type="primary" scheme_preference="dark">#435b7d</color>
  </branding>
  <developer_name translatable="no">Endless Access</developer_name>
  <developer id="org.endlessaccess">
    <name translatable="no">Endless Access</name>
  </developer>
  <description>
    <p>Story-driven, collaborative game where players don’t just explore a world—they co-create it. In Threadbare, players rebuild a world unraveling at the seams by recovering knowledge, crafting stories, and designing characters, quests, and cultures drawn from their own lives.</p>
  </description>
  <id>org.endlessaccess.threadbare</id>
  <launchable type="desktop-id">org.endlessaccess.threadbare.desktop</launchable>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>MPL-2.0</project_license>
  <content_rating type="oars-1.1">
    <content_attribute id="violence-cartoon">mild</content_attribute>
    <content_attribute id="violence-fantasy">mild</content_attribute>
  </content_rating>
  <url type="homepage">https://access.endlessstudios.com/threadbare</url>
  <url type="bugtracker">https://github.com/endlessm/threadbare/issues</url>
  <url type="contact">https://github.com/endlessm/threadbare/discussions/categories/q-a</url>
  <url type="vcs-browser">https://github.com/endlessm/threadbare</url>
  <url type="contribute">https://github.com/endlessm/threadbare/contribute</url>
  <screenshots>
    <screenshot type="default">
      <image>https://media.githubusercontent.com/media/endlessm/threadbare/67b2cad522c26b56abbfa334c2553a87d9b54af0/docs/screenshot.png</image>
      <caption>Hear stories from Elders; use the Eternal Loom to rebuild the world</caption>
    </screenshot>
  </screenshots>
  <releases type="external" url="https://raw.githubusercontent.com/endlessm/threadbare/refs/heads/main/linux/releases.xml" />
  <recommends>
    <control>keyboard</control>
    <control>gamepad</control>
    <display_length side="shortest" compare="ge">1080</display_length>
  </recommends>
  <requires>
    <internet>offline-only</internet>
    <display_length side="longest" compare="ge">1280</display_length>
    <display_length side="shortest" compare="ge">720</display_length>
  </requires>
</component>
